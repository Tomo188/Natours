header(class="header")
    nav(class="nav nav--tours")
        a(href="/" class="nav__el") All tours
        form(class="nav__search")
         button(class="nav__search-btn")
            svg
                use(xlink:href="/img/icons.svg#icon-search")
         input(type="text"
            placeholder="Search tours"
            class="nav__search-input")
    div(class="header__logo")
        img(src="/img/logo-white.png" alt="Natours logo")
    nav(class="nav nav--user")
        //- a(href="#" class="nav__el" ) My bookings
        //- a(href="#" class="nav__el")
        //-     img(src="/img/users/user-1.jpg" alt="User photo" class="nav__user-img")
        //-     span Jonas
        if user
          button.nav__el.nav__el--logout() Log out
          a.nav__el(href="/account")
            img.nav__user-img(src=`/img/users/${user.photo}` alt="user photo")
            span= user.name.split(" ")[0]
        else 
            a(class="nav__el" href="/login") Log in
            a(class="nav__el nav__el--cta" href="/signup") Sign up